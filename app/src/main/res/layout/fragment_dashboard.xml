<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DashboardFragment"
    android:background="#161F29"
    android:paddingBottom="100dp">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/welcome_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_bold"
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/active_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_txt"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#1D2B3C"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE STATUS"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ON"
                        android:textSize="40sp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/tick"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/temp_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/active_card"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#1D2B3C"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEMPERATURE"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/temp_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="40sp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        
        
        <androidx.cardview.widget.CardView
            android:id="@+id/find_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#D3FC51"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bike_img">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginEnd="10dp"
                    android:textColor="#161F29"
                    android:text="Find a charging station"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        

        <androidx.cardview.widget.CardView
            android:id="@+id/all_para_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_station"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#1D2B3C"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHOW MORE PARAMETERS"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/all_para_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/all_para_card"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#2F4662"
            app:cardCornerRadius="15dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitude : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitude : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/acx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AcX : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/acy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AcY : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/acz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AcZ : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/gyx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GyX : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/gyy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GyY : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/gyz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GyZ : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/pitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pitch : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/roll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/yaw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yaw : "
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>




        <ImageView
            android:id="@+id/bike_img"
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:src="@mipmap/bike"
            app:layout_constraintLeft_toRightOf="@id/active_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="@id/active_card" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>